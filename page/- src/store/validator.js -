// src/store/validator.js
import { defineStore } from 'pinia'

export const useValidatorStore = defineStore('validator', {
  state: () => ({
    wallet: null,
    approvals: [],
    snapshotId: '930187',
    contributors: [],
    auditTrail: []
  }),
  actions: {
    connectWallet(address) {
      this.wallet = address
    },
    addApproval(tx) {
      this.approvals.push(tx)
      this.auditTrail.push({ type: 'approval', tx })
    },
    addContributor(wallet) {
      if (!this.contributors.includes(wallet)) {
        this.contributors.push(wallet)
        this.auditTrail.push({ type: 'contributor', wallet })
      }
    }
  }
})


